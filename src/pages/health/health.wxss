/* pages/health/health.wxss */
.health-page {
  min-height: 100vh;
  background: #F7FAFC;
  padding: 24rpx 24rpx 120rpx;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #718096;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #45B7D1 0%, #3EADCF 100%);
  color: white;
  font-weight: bold;
}

/* 健康评分卡片 */
.score-card {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  position: relative;
}

.score-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.score-value {
  display: block;
  font-size: 96rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.score-status {
  display: block;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.edit-btn {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  border: 2rpx solid white;
  padding: 16rpx 48rpx;
  border-radius: 48rpx;
  font-size: 26rpx;
  font-weight: bold;
}

/* BMI 卡片 */
.bmi-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.card-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #667EEA;
}

.bmi-bar {
  height: 24rpx;
  border-radius: 12rpx;
  display: flex;
  overflow: hidden;
  margin-bottom: 12rpx;
  position: relative;
}

.bmi-section {
  flex: 1;
}

.bmi-section.underweight {
  background: #4ECDC4;
}

.bmi-section.normal {
  background: #3cc51f;
}

.bmi-section.overweight {
  background: #FFD93D;
}

.bmi-section.obese {
  background: #FF6B6B;
}

.bmi-indicator {
  position: absolute;
  top: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: white;
  border: 4rpx solid #667EEA;
  border-radius: 50%;
  transform: translateX(-50%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.bmi-labels {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.bmi-label {
  font-size: 22rpx;
  color: #718096;
}

.bmi-status {
  text-align: center;
  padding: 16rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
}

.status-text {
  font-size: 26rpx;
  color: #4A5568;
  font-weight: bold;
}

/* 身体数据 */
.body-data {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.data-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.data-row:last-child {
  margin-bottom: 0;
}

.data-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
}

.data-icon {
  font-size: 48rpx;
}

.data-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.data-label {
  font-size: 24rpx;
  color: #A0AEC0;
}

.data-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

/* 健康建议 */
.advice-card {
  background: linear-gradient(135deg, #F093FB15 0%, #F5576C15 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.advice-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 20rpx;
}

.advice-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.advice-item {
  font-size: 26rpx;
  color: #4A5568;
  line-height: 1.6;
}

/* 体征记录 */
.records-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.add-record-btn {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-main {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.record-type-badge {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

.record-date {
  font-size: 22rpx;
  color: #A0AEC0;
}

.delete-btn {
  font-size: 32rpx;
  color: #E53E3E;
  padding: 0 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
  color: #A0AEC0;
}

/* 对话框 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.dialog-content {
  width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.dialog-close {
  font-size: 40rpx;
  color: #A0AEC0;
  padding: 0 8rpx;
}

.dialog-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.radio-group {
  display: flex;
  gap: 32rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #2D3748;
}

.type-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.type-option {
  padding: 16rpx 28rpx;
  background: #F7FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #4A5568;
  transition: all 0.3s;
}

.type-option.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
  border-color: #667EEA;
}

.dialog-footer {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
}

.dialog-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.dialog-btn.cancel {
  background: #EDF2F7;
  color: #4A5568;
}

.dialog-btn.confirm {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
}
