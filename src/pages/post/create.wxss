/* pages/post/create.wxss */
.create-page {
  background: #F7FAFC;
  padding-bottom: 120rpx;
}

.form-section {
  padding: 24rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

/* 文字输入 */
.content-input {
  width: 100%;
  min-height: 300rpx;
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #2D3748;
  line-height: 1.8;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #A0AEC0;
  margin-top: 12rpx;
  padding-right: 8rpx;
}

/* 图片选择 */
.images-section {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 100%;
  background: #F7FAFC;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.image-add {
  width: 100%;
  aspect-ratio: 1;
  border: 2rpx dashed #CBD5E0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F7FAFC;
  transition: all 0.2s;
}

.image-add:active {
  background: #EDF2F7;
  border-color: #A0AEC0;
}

.add-icon {
  font-size: 56rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
}

.add-text {
  font-size: 22rpx;
  color: #718096;
}

/* 底部发布按钮 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.publish-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FFB6C1 0%, #D4A5FF 100%);
  border-radius: 44rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(212, 165, 255, 0.4);
}

.publish-btn::after {
  border: none;
}

.publish-btn[disabled] {
  background: #E2E8F0;
  color: #A0AEC0;
  box-shadow: none;
}

