/* pages/diet/diet.wxss */
.diet-page {
  background: #F7FAFC;
  padding: 24rpx;
}

/* 页面标题 */
.page-header {
  margin-bottom: 24rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #718096;
}

/* 卡路里卡片 */
.calorie-card {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.25);
}

.calorie-main {
  text-align: center;
  margin-bottom: 16rpx;
}

.calorie-value {
  font-size: 64rpx;
  font-weight: bold;
  color: white;
}

.calorie-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-left: 8rpx;
}

.calorie-progress {
  height: 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.calorie-fill {
  height: 100%;
  background: white;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.calorie-status {
  text-align: center;
  color: white;
  font-size: 24rpx;
  opacity: 0.95;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #718096;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
  font-weight: bold;
}

/* 快捷添加 */
.quick-meals {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.meal-btn {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.meal-btn:active {
  transform: scale(0.95);
}

.meal-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.meal-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.meal-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-icon {
  font-size: 48rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.record-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

.record-meal {
  font-size: 24rpx;
  color: #4ECDC4;
  font-weight: 500;
}

.record-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

.record-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.record-stat {
  font-size: 22rpx;
  color: #4ECDC4;
  font-weight: bold;
}

.delete-btn {
  font-size: 32rpx;
  color: #E53E3E;
  padding: 0 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #A0AEC0;
}

/* 食谱网格 */
.recipe-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recipe-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.recipe-image {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #F093FB 0%, #F5576C 100%);
}

.recipe-info {
  padding: 24rpx;
}

.recipe-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 12rpx;
}

.recipe-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.recipe-tag {
  background: #EDF2F7;
  color: #4A5568;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.recipe-desc {
  display: block;
  font-size: 26rpx;
  color: #718096;
  line-height: 1.5;
}

.recipe-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx 24rpx;
}

.recipe-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
}

.recipe-btn.detail {
  background: #EDF2F7;
  color: #4A5568;
}

.recipe-btn.primary {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
}

/* 营养分析 */
.nutrition-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.nutrition-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 32rpx;
}

.nutrition-item {
  margin-bottom: 32rpx;
}

.nutrition-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.nutrition-name {
  font-size: 28rpx;
  color: #4A5568;
}

.nutrition-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

.nutrition-bar {
  height: 12rpx;
  background: #EDF2F7;
  border-radius: 6rpx;
  overflow: hidden;
}

.nutrition-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.nutrition-fill.protein {
  background: linear-gradient(90deg, #FF6B6B 0%, #FF8E53 100%);
}

.nutrition-fill.carbs {
  background: linear-gradient(90deg, #4ECDC4 0%, #44A08D 100%);
}

.nutrition-fill.fat {
  background: linear-gradient(90deg, #FFD93D 0%, #F9CA24 100%);
}

.nutrition-fill.fiber {
  background: linear-gradient(90deg, #667EEA 0%, #764BA2 100%);
}

/* 营养建议 */
.nutrition-tips {
  background: linear-gradient(135deg, #F093FB15 0%, #F5576C15 100%);
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 16rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #718096;
  line-height: 2;
}

/* 添加对话框 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  overflow: hidden;
}

.dialog-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-sizing: border-box;
  margin: 0 auto;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.dialog-close {
  font-size: 40rpx;
  color: #A0AEC0;
  padding: 0 8rpx;
}

.dialog-body {
  padding: 32rpx;
  overflow-x: hidden;
  box-sizing: border-box;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.dialog-footer {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
}

.dialog-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.dialog-btn.cancel {
  background: #EDF2F7;
  color: #4A5568;
}

.dialog-btn.confirm {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
}

/* 级联选择样式 */
.cascade-step {
  min-height: 300rpx;
}

.step-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

.step-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.step-back {
  font-size: 28rpx;
  color: #667EEA;
  padding: 8rpx 0;
}

/* 分类列表 */
.category-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.category-item {
  background: #F7FAFC;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.2s;
}

.category-item:active {
  background: #EDF2F7;
  transform: scale(0.98);
}

.category-icon {
  font-size: 48rpx;
}

.category-name {
  font-size: 26rpx;
  color: #2D3748;
  font-weight: 500;
}

/* 搜索框 */
.search-box {
  margin-bottom: 24rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 食物列表 */
.food-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.food-item {
  background: white;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s;
}

.food-item:active {
  background: #F7FAFC;
  border-color: #667EEA;
}

.food-icon {
  font-size: 40rpx;
}

.food-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.food-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #2D3748;
}

.food-calories {
  font-size: 22rpx;
  color: #718096;
}

.food-arrow {
  font-size: 28rpx;
  color: #A0AEC0;
}

/* 单位列表 */
.unit-list {
  margin-bottom: 24rpx;
}

.unit-item {
  background: white;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.2s;
}

.unit-item:active {
  background: #F7FAFC;
}

.unit-item.active {
  background: #EDF2F7;
  border-color: #667EEA;
}

.unit-name {
  font-size: 28rpx;
  color: #2D3748;
  font-weight: 500;
}

.unit-weight {
  font-size: 24rpx;
  color: #718096;
}

/* 自定义重量 */
.custom-weight-box {
  margin-bottom: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #E2E8F0;
}

/* 营养信息预览 */
.nutrition-preview {
  background: linear-gradient(135deg, #F093FB15 0%, #F5576C15 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.preview-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 16rpx;
}

.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.preview-label {
  font-size: 24rpx;
  color: #718096;
}

.preview-value {
  font-size: 24rpx;
  color: #2D3748;
  font-weight: 500;
}

