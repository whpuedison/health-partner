/* pages/goal/goal.wxss */
.goal-page {
  min-height: 100vh;
  background: #F7FAFC;
  padding: 24rpx 24rpx 120rpx;
}

.page-header {
  margin-bottom: 24rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #718096;
}

/* 当前状态 */
.current-status {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 20rpx;
}

.status-grid {
  display: flex;
  justify-content: space-around;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.status-label {
  font-size: 24rpx;
  color: #718096;
}

.status-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667EEA;
}

/* 信息卡片 */
.info-card {
  background: linear-gradient(135deg, #667EEA15 0%, #764BA215 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #4A5568;
}

.info-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #667EEA;
}

/* 目标表单 */
.goal-form {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-section {
  margin-bottom: 32rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

.form-section-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #4A5568;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #667EEA;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #E2E8F0;
}

.picker-view {
  width: 100%;
  padding: 20rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2D3748;
  border: 2rpx solid #E2E8F0;
}

.form-hint {
  display: block;
  font-size: 22rpx;
  color: #A0AEC0;
  margin-top: 8rpx;
  padding-left: 8rpx;
}

/* 保存按钮 */
.save-section {
  margin-bottom: 24rpx;
}

.save-btn {
  width: 100%;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
}

/* 温馨提示 */
.tips-card {
  background: linear-gradient(135deg, #FFD93D15 0%, #F9CA2415 100%);
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 16rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  line-height: 2;
}

