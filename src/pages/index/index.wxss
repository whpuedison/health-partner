/* pages/index/index.wxss */
.index-page {
  background: linear-gradient(180deg, #FFF5F7 0%, #F0F9FF 50%, #F5F3FF 100%);
  padding: 24rpx 24rpx 140rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #FF6B9D 0%, #FFA07A 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.25);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
  margin-right: 24rpx;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
}

.avatar-placeholder image {
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}

.avatar-btn {
  background: transparent;
  border: none;
  padding: 0;
  line-height: normal;
  margin: 0 !important;
  width: fit-content !important;
}

.avatar-btn::after {
  border: none;
}

.nickname-input {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  color: white;
  font-size: 28rpx;
  width: 200rpx;
  height: auto;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.user-text {
  flex: 1;
  color: white;
}

.greeting {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.status-text {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.health-overview {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.health-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.health-value {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.health-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.health-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 今日目标 */
.today-section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.section-subtitle {
  font-size: 24rpx;
  color: #A0AEC0;
}

.stats-grid {
  display: flex;
  gap: 16rpx;
}

.stat-card {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.stat-card:active {
  transform: scale(0.95);
}

.checkin-card {
  cursor: pointer;
  position: relative;
}

.checkin-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.checkin-hint {
  font-size: 20rpx;
  color: #4ECDC4;
  margin-top: 8rpx;
  font-weight: 500;
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #718096;
  text-align: center;
  margin-bottom: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E2E8F0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4ECDC4 0%, #44A08D 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 快捷功能 */
.quick-actions {
  margin-bottom: 24rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-item {
  height: 160rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
}

/* 健康小贴士 */
.tips-section {
  margin-bottom: 24rpx;
}

.tip-card {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tip-text {
  font-size: 28rpx;
  color: white;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 20rpx;
}

.tip-dots {
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.3s;
}

.dot.active {
  width: 32rpx;
  background: rgba(255, 255, 255, 0.9);
}
