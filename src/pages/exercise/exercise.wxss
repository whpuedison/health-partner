/* pages/exercise/exercise.wxss */
.exercise-page {
  min-height: 100vh;
  background: #F7FAFC;
  padding: 24rpx 24rpx 120rpx;
}

/* 页面标题 */
.page-header {
  margin-bottom: 24rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #718096;
}

/* 运动统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.25);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-icon {
  font-size: 48rpx;
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 目标卡片 */
.goal-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

.goal-status {
  font-size: 24rpx;
  color: #4ECDC4;
  font-weight: bold;
}

.goal-progress {
  height: 12rpx;
  background: #E2E8F0;
  border-radius: 6rpx;
  overflow: hidden;
}

.goal-fill {
  height: 100%;
  background: linear-gradient(90deg, #4ECDC4 0%, #44A08D 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #718096;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  color: white;
  font-weight: bold;
}

/* 快捷运动 */
.quick-exercises {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.exercise-btn {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.exercise-btn:active {
  transform: scale(0.95);
}

.exercise-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.exercise-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.exercise-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.info-item {
  font-size: 20rpx;
  color: #A0AEC0;
  text-align: center;
}

/* 记录列表 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-icon {
  font-size: 48rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

.record-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

.record-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.record-stat {
  font-size: 22rpx;
  color: #4ECDC4;
  font-weight: bold;
}

.delete-btn {
  font-size: 32rpx;
  color: #E53E3E;
  padding: 0 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #A0AEC0;
}

/* 运动推荐 */
.recommend-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommend-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.recommend-header {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.recommend-icon {
  font-size: 96rpx;
}

.recommend-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #2D3748;
}

.recommend-body {
  padding: 24rpx;
}

.recommend-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 12rpx;
}

.recommend-desc {
  display: block;
  font-size: 26rpx;
  color: #718096;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.recommend-tags {
  display: flex;
  gap: 12rpx;
}

.recommend-tag {
  background: #EDF2F7;
  color: #4A5568;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.recommend-footer {
  padding: 0 24rpx 24rpx;
}

.recommend-btn {
  width: 100%;
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

/* 本周统计 */
.week-summary {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
}

.summary-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 24rpx;
  text-align: center;
}

.summary-grid {
  display: flex;
  justify-content: space-around;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.summary-value {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.summary-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 历史记录 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.history-date {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.date-day {
  font-size: 24rpx;
  font-weight: bold;
  color: #4A5568;
}

.date-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

.history-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.history-icon {
  font-size: 48rpx;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.history-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2D3748;
}

.history-detail {
  font-size: 22rpx;
  color: #718096;
}

/* 添加对话框 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.dialog-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.dialog-close {
  font-size: 40rpx;
  color: #A0AEC0;
  padding: 0 8rpx;
}

.dialog-body {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.dialog-footer {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
}

.dialog-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.dialog-btn.cancel {
  background: #EDF2F7;
  color: #4A5568;
}

.dialog-btn.confirm {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  color: white;
}

