/* pages/profile/profile.wxss */
.profile-page {
  background: #F7FAFC;
  padding: 24rpx 24rpx 140rpx; /* 增加底部间距，确保内容完整展示 */
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #A8E6CF 0%, #4ECDC4 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.25);
}

.user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid white;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  border: 4rpx solid white;
}

.avatar-placeholder image {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}

.avatar-btn {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.avatar-btn::after {
  border: none;
}

.nickname-input {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  width: 300rpx;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.user-data {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.data-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
}

.data-divider {
  color: rgba(255, 255, 255, 0.6);
}

.login-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 统计数据 */
.stats-section {
  margin-bottom: 24rpx;
}

.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #4ECDC4;
}

.stat-label {
  font-size: 24rpx;
  color: #718096;
}

/* 我的目标 */
.goals-section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.section-subtitle {
  font-size: 24rpx;
  color: #A0AEC0;
}

.goals-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.goal-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.goal-card:active {
  transform: scale(0.95);
}

.goal-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.goal-title {
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 16rpx;
}

.goal-value-box {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.goal-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2D3748;
}

.goal-unit {
  font-size: 24rpx;
  color: #718096;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 24rpx;
  padding-bottom: 40rpx; /* 与底部留出距离，确保内容完整展示 */
}

.menu-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #E2E8F0;
  transition: background 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F7FAFC;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 40rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #2D3748;
}

.menu-arrow {
  font-size: 48rpx;
  color: #CBD5E0;
  font-weight: 300;
}


/* 对话框 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  overflow: hidden;
}

.dialog-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-sizing: border-box;
  margin: 0 auto;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.dialog-close {
  font-size: 40rpx;
  color: #A0AEC0;
  padding: 0 8rpx;
}

.dialog-body {
  padding: 32rpx;
  overflow-x: hidden;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.dialog-footer {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
}

.dialog-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.dialog-btn.cancel {
  background: #EDF2F7;
  color: #4A5568;
}

.dialog-btn.confirm {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  color: white;
}
